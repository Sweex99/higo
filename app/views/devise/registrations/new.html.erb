<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', tabindex: 1 %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'control-label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', tabindex: 2 %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'control-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', tabindex: 3 %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: 'btn btn-primary btn-lg btn-block', tabindex: 4 %>
  </div>
<% end %>
<%= link_to 'Login', new_user_session_path, class: 'btn btn-primary btn-lg btn-block', tabindex: 5 %>
